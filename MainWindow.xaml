<Window x:Class="RiivToISO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiivToISO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--StackPanels for the user input-->
        <StackPanel Grid.Column="0">
            <TextBox x:Name="dpeFolderPathTextBox" Height="26" Margin="0,212"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button x:Name="goButton" Margin="0,197" Height="56"></Button>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBox x:Name="mkwFolderPathTextBox" Height="26" Margin="0,212"></TextBox>
        </StackPanel>
    </Grid>
</Window>
